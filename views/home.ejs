<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %> <!-- Assumes Bootstrap is included here -->
    <title>Homepage</title>
</head>
<body>
    <%- include('./partials/nav') %> <!-- Navbar partial -->

    <!-- Blog Cards Section -->
    <div class="container mt-5">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
            <% blogs.forEach(blog => { %>
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <% if (blog.coverImageURL) { %>
                    <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Blog Cover Image">
                    <% } else { %>
                    <img src="/images/default-cover.jpg" class="card-img-top" alt="Default Blog Cover">
                    <% } %>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><%= blog.title %></h5>
                        <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto">View</a>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>

    <%- include('./partials/scripts') %> <!-- Footer scripts -->
</body>
</html>
